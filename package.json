{
  "name": "wip-component",
  "version": "2.0.0",
  "description": "A React component to show its children only when it is displayed in development.",
  "main": "lib/index.js",
  "sideEffects": false,
  "scripts": {
    "build": "rimraf ./lib && tsc",
    "deploy": "cross-env NODE_ENV=production yarn build && yarn publish --non-interactive",
    "test": "echo \"Error: no test specified\" && exit 1",
    "storybook:start": "start-storybook -c storybook",
    "storybook:build": "build-storybook -c storybook -o docs",
    "storybook:commit": "git add . && git commit -m \"Updated storybook\"",
    "all": "yarn install && yarn storybook:build && yarn deploy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iulian-radu-at/wip.git"
  },
  "files": [
    "lib",
    "index.d.ts"
  ],
  "keywords": [
    "wip",
    "development",
    "react",
    "react-component"
  ],
  "author": "Iulian Radu <iulian.radu@gmx.at>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/iulian-radu-at/wip/issues"
  },
  "homepage": "https://github.com/iulian-radu-at/wip#readme",
  "devDependencies": {
    "@babel/core": "^7.20.5",
    "@storybook/builder-webpack5": "^6.5.14",
    "@storybook/manager-webpack5": "^6.5.14",
    "@storybook/react": "^6.5.14",
    "@types/babel-core": "^6.25.7",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "@types/rimraf": "^3.0.2",
    "babel-core": "^6.26.3",
    "babel-jest": "^29.3.1",
    "babel-loader": "^9.1.0",
    "babel-preset-react-app": "^10.0.1",
    "cross-env": "^7.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.9.4"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "jest": {
    "modulePathIgnorePatterns": [
      "./node_modules",
      "./history"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "testRegex": "src/*(/(__tests?__/)([^_].*/)*?[^_][^/]*?\\.(test|spec)?\\.(js?))$",
    "setupFiles": [
      "./enzymeAdapter.setup.js"
    ]
  }
}
