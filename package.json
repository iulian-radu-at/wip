{
  "name": "wip-component",
  "version": "1.0.2",
  "description": "A React component to show its children only when it is displayed in development.",
  "main": "lib/index.js",
  "sideEffects": false,
  "scripts": {
    "build": "rimraf ./lib && tsc",
    "deploy": "cross-env NODE_ENV=production yarn build && yarn publish --non-interactive",
    "test": "echo \"Error: no test specified\" && exit 1",
    "storybook": "start-storybook -c storybook",
    "build-storybook": "build-storybook -c storybook -o docs",
    "commit-storybook": "git add . && git commit -m \"Updated storybook\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iulian-radu-at/wip.git"
  },
  "files": [
    "lib",
    "index.d.ts"
  ],
  "keywords": [
    "wip",
    "development",
    "react",
    "react-component"
  ],
  "author": "Iulian Radu <iulian.radu@gmx.at>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/iulian-radu-at/wip/issues"
  },
  "homepage": "https://github.com/iulian-radu-at/wip#readme",
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.10.2",
    "@storybook/react": "^5.3.19",
    "@types/babel-core": "^6.25.6",
    "@types/enzyme": "^3.10.5",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/react": "^16.9.36",
    "@types/react-dom": "^16.9.8",
    "@types/rimraf": "^3.0.0",
    "babel-core": "^6.26.3",
    "babel-jest": "^26.0.1",
    "babel-loader": "^8.1.0",
    "babel-preset-react-app": "^9.1.2",
    "cross-env": "^7.0.2",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "rimraf": "^3.0.2",
    "typescript": "^3.9.5"
  },
  "peerDependencies": {
    "react": "^16.9.0",
    "react-dom": "^16.9.0"
  },
  "jest": {
    "modulePathIgnorePatterns": [
      "./node_modules",
      "./history"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "testRegex": "src/*(/(__tests?__/)([^_].*/)*?[^_][^/]*?\\.(test|spec)?\\.(js?))$",
    "setupFiles": [
      "./enzymeAdapter.setup.js"
    ]
  }
}
